<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.WelcomeViewController">
   <children>
      <VBox layoutX="44.0" layoutY="46.0" spacing="20.0">
         <Label styleClass="title" text="Welcome to Secure Repository Program" />
         <Label text="To login, please provide your certificate" />
         <Button fx:id="btnBrowse" onAction="#handleBrowse" styleClass="button" text="Browse" />
         <Label styleClass="small-text" text="If you do not have an account yet, please select the registration button to create a new one" wrapText="true" />
         <Button fx:id="btnRegister" onAction="#handleRegister" styleClass="button" text="Register" />
      </VBox>
   </children>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</AnchorPane>
